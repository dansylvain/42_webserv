	"version": "0.2.0",
	"configurations": [
		{
			"name": "RUN DEBUG",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/debug_webserv",
			"args": [],
			// "args": ["_configs/listingDirectory/listingdirectory_fail_1(404).ini"],
			// "args": ["_configs/base_test/base_test_ok_1.ini"],
			// "args": ["_configs/racine_test/racine_ok_1(listing_festival).ini"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				},
				{
                    "description": "Continue execution when an exception is thrown and caught",
                    "text": "catch throw",
                    "ignoreFailures": true
                }
			]
		}

	]
}